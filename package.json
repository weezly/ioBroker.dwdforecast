  "license": "MIT",
  "keywords": [
    "ioBroker",
    "template",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/weezly/ioBroker.dwdforecast"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.4.0",
    "axios": "~0.21.1",
    "line-reader": "^0.4.0",
    "node-line-reader": "0.0.3",
    "sax": "~1.2.4",
    "unzipper": "~0.10.11"
  },
  "devDependencies": {
    "@iobroker/testing": "^2.3.0",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
